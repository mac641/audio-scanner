{
  "compilerOptions": {
    "checkJs": true,
    "lib": [
      "deno.ns"
    ]
  },
  "imports": {
    "music-metadata": "npm:music-metadata@^11.2.1"
  },
  "lint": {
    "include": [
      "src/**/*.d.ts",
      "src/**/*.js",
      "src/**/*.ts"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "ban-untagged-todo"
      ]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "always"
  },
  "lock": true,
  "nodeModulesDir": "auto"
}
